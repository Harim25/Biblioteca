@model Biblioteca.Models.dbModels.Autor

@{
    ViewData["Title"] = "Delete";
}

@section Styles {
    <link rel="stylesheet" href="~/css/administrar-elementos.css" />
}
<h1>Eliminar</h1>

<h3>¿Estas seguro de querer eliminar este autor?</h3>
<div>
    <h4>Autor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd class = "col-sm-10">
            <img class="rounded-circle autor" src="@Html.DisplayFor(model => model.Imagen)" alt="" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger me-3"/>|
        <a asp-action="Index" class="btn btn-dark">Volver</a>
    </form>
</div>
