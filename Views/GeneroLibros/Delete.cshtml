@model Biblioteca.Models.dbModels.GeneroLibro

@{
    ViewData["Title"] = "Eliminar";
}

@section Styles {
    <link rel="stylesheet" href="~/css/administrar-elementos.css" />
}

<h1>Eliminar</h1>

<h3>¿Estas seguro de querer eliminar este genero?</h3>
<div>
    <h4>Genero de Libro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger me-3" /> |
        <a asp-action="Index" class="btn btn-dark">Volver</a>
    </form>
</div>
