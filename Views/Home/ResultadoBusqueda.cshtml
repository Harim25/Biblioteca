@{
    //Cambiar lo de chalino a lo q buscó la persona
    ViewData["Title"] = "Resultados para Chalino Sánchez";
}

@section Styles {
    <link rel="stylesheet" href="~/css/catalogo.css" />
    <link rel="stylesheet" href="~/css/resultado-busqueda.css" />
}

@section Scripts {
    <script src="~/js/catalogo.js"></script>
}

<h1>Resultados para "Chalino Sánchez"</h1>
<p>Filtrar por:</p>
<div class="botones mb-3">
    <div class="botones">
        <div class="dropdown me-3">
            <button class="btn btn-secondary dropdown-toggle drop-downs" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                Autor
            </button>
            <ul id="listaAutor" class="dropdown-menu">
                <!-- Lista de los autores, se selecciona uno y solo se muestran sus libros que coincidan con la busqueda -->
            </ul>
        </div>
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle drop-downs" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                Género
            </button>
            <ul id="listaGenero" class="dropdown-menu">
                <!-- Igual -->
            </ul>
        </div>
    </div>
</div>
<p>Ordenar por:</p>
<div class="botones mb-3">
    <div class="botones">
        <button class="btn btn-secondary me-3" type="button" aria-expanded="false">
            Alfabetico
        </button>
        <button class="btn btn-secondary me-3" type="button" aria-expanded="false">
            Populares
        </button>
        <button class="btn btn-secondary" type="button" aria-expanded="false">
            Autor
        </button>
    </div>
</div>
<div id="botones3" class="botones">
    <div class="borde">
        <button type="button" class="btnfiltros btn btn-dark">
            Limpiar filtros
        </button>
    </div>
</div>
<div id="contenido" class="tabla">
    <!-- Contenido, la plantilla esta en el js -->
</div>
<div class="divBtn mt-4">
    <button type="button" id="btnMas" class="btn btn-lg btn-dark">Mostrar más</button>
</div>