@model IEnumerable<Biblioteca.Models.dbModels.Libro>

@{
    ViewData["Title"] = "Nuestros Libros";
}

@section Styles {
    <link rel="stylesheet" href="~/css/administrar-elementos.css" />
    <link rel="stylesheet" href="~/css/catalogo.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />
}
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>
    <script src="~/js/administrar-catalogo.js"></script>
}

<div>
    <div id="botones2" class="botones">
        <div class="borde me-3">
            <a asp-controller="GeneroLibroLectores" asp-action="Index" class="btn btnexpo btn btn-dark">
                Explorar todos los géneros
            </a>
        </div>
        <div class="borde me-3">
            <a asp-controller="AutorLectores" asp-action="Index" class="btn btnexpo btn btn-dark">
                Explorar todos los autores
            </a>
        </div>
    </div>
<h1>Nuestros Libros</h1>
</div>
<br />
<div>
<table id="TLibros" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editorial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sinopsis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editorial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sinopsis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            <td>
                <img class="libro" src="@Html.DisplayFor(modelItem => item.Imagen)" alt="" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.Nombre)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" type="button" class="btn btn-dark"><i class="bi bi-info-circle"></i>Detalles</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>