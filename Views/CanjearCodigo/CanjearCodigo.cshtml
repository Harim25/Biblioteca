@{
    ViewData["Title"] = "CanjearCodigo";
}

@section Styles {
    <link rel="stylesheet" href="~/css/canjear-code.css" />
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Canjear Código</h2>
    <form class="text-center">
        <div class="mb-3">
            <label for="codigoInput" class="form-label">Ingrese el código</label>
            <input type="text" class="form-control mx-auto" id="codigoInput" style="max-width: 300px;" placeholder="Código">
        </div>
        <a asp-controller="CanjearCodigo" asp-action="DetallesPrestamo"  type="button" class="btn btn-primary">Hecho</a>
    </form>
</div>