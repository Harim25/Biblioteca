@model Biblioteca.Models.dbModels.AutorFavorito

@{
    ViewData["Title"] = "Quitar Autor de Favoritos";
}

<h1>Quitar de Favoritos</h1>

<h3>¿Estas seguro de querer quitar de favoritos a este autor?</h3>
<div>
    <h4>Autor Favorito</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor.Nombre)
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.Autor.Imagen)" alt="Alternate Text" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UsuarioId" />
        <input type="hidden" asp-for="AutorId" />
        <input type="submit" value="Quitar de Favoritos" class="btn btn-danger me-3" /> |
        <a asp-action="Index" class="btn btn-dark">Volver</a>
    </form>
</div>
