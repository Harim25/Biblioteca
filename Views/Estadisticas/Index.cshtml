@{
    ViewData["Title"] = "Estadísticas";
}

@section Styles {
    <link rel="stylesheet" href="~/css/estadisticas.css" />
}

@section Scripts {
    <!-- Apache Echarts -->
    <script src="https://fastly.jsdelivr.net/npm/echarts@5/dist/echarts.min.js"></script>
    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="~/js/estadisticas.js"></script>
}

<h1>Estadísticas</h1>
<div class="tarjeta mb-3">
    <div class="card-body">
        <h3 class="card-title mb-3">Usuarios</h3>
        <div class="row">
            <div class="column">
                <h6 class="mb-2">Cantidad de usuarios:</h6>
                <p class="ms-4">Administradores: #<br>Lectores: #</p>
                <h6 class="mb-2">Género:</h6>
                <p class="ms-4">Hombres: #<br>Mujeres: #</p>
                <h6 class="mb-2">Edad promedio: 30 años</h6>
                <div id="graficoedades"></div>
            </div>
            <div class="column">
                <div class="tabla-contenedor">
                    <table class="tabla-fija">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Edad</th>
                                <th>Cantidad de usuarios</th>
                            </tr>
                        </thead>
                        <tbody id="tablaedades">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="tarjeta mb-3">
    <div class="card-body">
        <h3 class="card-title mb-3">Libros más pedidos</h3>
        <div class="row">
            <div class="column">
                <div class="tabla-contenedor">
                    <table class="tabla-fija">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Título</th>
                                <th>Género</th>
                                <th>Autor</th>
                                <th>Pedidos</th>
                            </tr>
                        </thead>
                        <tbody id="tablapedidos">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="column">
                <h6 class="mb-2">Géneros:</h6>
                <div id="graficopedidos"></div>
            </div>
        </div>
    </div>
</div>
<div class="tarjeta mb-3">
    <div class="card-body">
        <h3 class="card-title mb-3">Libros más gustados</h3>
        <div class="row">
            <div class="column">
                <div class="tabla-contenedor">
                    <table class="tabla-fija">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Título</th>
                                <th>Género</th>
                                <th>Autor</th>
                                <th>Likes</th>
                            </tr>
                        </thead>
                        <tbody id="tablagustadoslibros">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="column">
                <h6 class="mb-2">Géneros:</h6>
                <div id="graficogustadoslibros"></div>
            </div>
        </div>
    </div>
</div>
<div class="tarjeta">
    <div class="card-body">
        <h3 class="card-title mb-3">Autores más gustados</h3>
        <div class="tabla-contenedor">
            <table class="tabla-fija">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Likes</th>
                    </tr>
                </thead>
                <tbody id="tablagustadosautores">
                </tbody>
            </table>
        </div>
    </div>
</div>