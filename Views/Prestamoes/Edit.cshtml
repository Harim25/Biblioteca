@using Biblioteca.Models.ViewModels
@model PrestamoViewModel

@{
    ViewData["Title"] = "Editar Prestamos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/administrar-elementos.css" />
}

<h1>Editar</h1>

<h4>Prestamo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PrestamoUpdate.Id" />
            <div class="form-group">
                <label asp-for="PrestamoUpdate.InicioPrestamo" class="control-label"></label>
                <input asp-for="PrestamoUpdate.InicioPrestamo" class="form-control" />
                <span asp-validation-for="PrestamoUpdate.InicioPrestamo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrestamoUpdate.FinPrestamo" class="control-label"></label>
                <input asp-for="PrestamoUpdate.FinPrestamo" class="form-control" />
                <span asp-validation-for="PrestamoUpdate.FinPrestamo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrestamoUpdate.UsuarioId" class="control-label"></label>
                <select asp-for="PrestamoUpdate.UsuarioId" class="form-control" asp-items="Model.SelectListsUsuarios"></select>
                <span asp-validation-for="PrestamoUpdate.UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrestamoUpdate.LibroId" class="control-label"></label>
                <select asp-for="PrestamoUpdate.LibroId" class="form-control" asp-items="Model.SelectListsLibros"></select>
                <span asp-validation-for="PrestamoUpdate.LibroId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-dark">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
