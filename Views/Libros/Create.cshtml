@model Biblioteca.Models.ViewModels

@{
    ViewData["Title"] = "Agregar Nuevo Libro";
}

@section Styles {
    <link rel="stylesheet" href="~/css/administrar-elementos.css" />
}

<h1>Agregar Nuevo Libro</h1>

<h4>Libro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LibroCreate.Titulo" class="control-label"></label>
                <input asp-for="Libro.Create.Titulo" class="form-control" />
                <span asp-validation-for="LibroCreate.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibroCreate.AutorId" class="control-label"></label>
                <select asp-for="LibroCreate.AutorId" class="form-select" asp-items="Model.SelectListsAutores"></select>
                <span asp-validation-for="LibroCreate.AutorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibroCreate.GeneroId" class="control-label"></label>
                <select asp-for="LibroCreate.GeneroId" class="form-select" asp-items="Model.SelectListsGeneros"></select>
                <span asp-validation-for="LibroCreate.GeneroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibroCreate.Editorial" class="control-label"></label>
                <input asp-for="LibroCreate.Editorial" class="form-control" />
                <span asp-validation-for="LibroCreate.Editorial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibroCreate.Sinopsis" class="control-label"></label>
                <input asp-for="LibroCreate.Sinopsis" class="form-control" />
                <span asp-validation-for="LibroCreate.Sinopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibroCreate.Cantidad" class="control-label"></label>
                <input asp-for="LibroCreate.Cantidad" class="form-control" />
                <span asp-validation-for="LibroCreate.Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibroCreate.FechaCreacion" class="control-label"></label>
                <input asp-for="LibroCreate.FechaCreacion" class="form-control" />
                <span asp-validation-for="LibroCreate.FechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibroCreate.Imagen" class="control-label"></label>
                <input asp-for="LibroCreate.Imagen" class="form-control" />
                <span asp-validation-for="LibroCreate.Imagen" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-dark">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
